[user]
  name = Joel Chippindale
  email = joel@joelchippindale.com
[core]
  excludesfile = ~/.gitignore
[alias]
  di = diff
  co = checkout
  ci = commit -v
  br = branch
  st = status
  rb = rebase
  rs = reset
  sta = stash
  up = !thor git:update
  hist = log --pretty=format:\"%h %ad | %s%d\" --graph --date=short
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[merge]
  tool = opendiff
  conflictstyle = diff3
[color "interactive"]
  prompt = magenta
[push]
  default = matching
[github]
  user = mocoso
[branch]
  autosetuprebase = always
[rebase]
	autosquash = true
