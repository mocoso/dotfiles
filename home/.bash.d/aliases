alias la="ls -alG"

# Replace tmux with .tmux-up.sh if it exists for current folder
function run_tmux_with_configuration_support () {
  if [ -r ./.tmux-up.sh ]; then
    ./.tmux-up.sh
  else
    tmux
  fi
}
alias tmux="run_tmux_with_configuration_support"

# Alias for bundle exec
alias be="bundle exec"

# Rails aliases
alias cufa="bundle exec rake cucumber:fast"
 
# Bundler aliases from http://marc-bowes.com/2011/09/21/dry-your-bundle-exec-tears.html
# with additional tweak so that it is not used if you have a ./bin directory (which is
# taken to mean you have installed binstubs with bundler and want to use these instead)
function run_bundler_cmd () {
  if [[ -r ./Gemfile && ! -d ./bin ]]; then
    bundle exec $@
  else
    $@
  fi
}
 
for cmd in rake spec rspec cucumber cap rails rackup irb heroku spork
do
  alias $cmd="run_bundler_cmd $cmd"
done
